<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".CreateCommittee">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="ScrollViewSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:background="@drawable/box_background_white">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:background="@drawable/button_round"
                app:srcCompat="@drawable/icon_camera"
                tools:ignore="ContentDescription" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                tools:ignore="RtlHardcoded">

                <EditText
                    android:paddingTop="10dp"
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="13"
                    android:background="@null"
                    android:inputType="text|textNoSuggestions"
                    android:hint="Committe Name"
                    android:textStyle="bold"
                    android:textSize="13pt"
                    tools:ignore="HardcodedText,LabelFor" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@null"
                    android:inputType="text|textNoSuggestions"
                    android:hint="Add short description . . ."
                    tools:ignore="LabelFor, HardcodedText" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/box_background_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="6dp"
                android:orientation="horizontal"
                tools:ignore="NestedWeights">

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_weight="90"
                    android:text="Use project supervisor"
                    tools:ignore="HardcodedText,LabelFor"
                    android:onClick="onCheckboxClicked"/>

                <ImageButton
                    android:id="@+id/imgHelp1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:padding="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/icon_help"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="6dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_weight="90"
                    android:text="Use steering committe"
                    tools:ignore="HardcodedText,LabelFor"
                    android:onClick="onCheckboxClicked" />

                <ImageButton
                    android:id="@+id/imgHelp2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:padding="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/icon_help"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="6dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_weight="90"
                    android:text="Use division sectors"
                    tools:ignore="HardcodedText"
                    android:onClick="onCheckboxClicked"/>

                <ImageButton
                    android:id="@+id/imgHelp3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:scaleType="fitCenter"
                    android:padding="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/icon_help"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/ProjectS"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:background="@drawable/box_background_white"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Project Supervisor"
            android:textColor="@color/black"
            android:textSize="9pt"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:gravity="center"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/imgPS"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/icon_user"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="8pt"
                android:gravity="right"
                android:paddingRight="5dp"
                android:layout_gravity="center"
                android:text="0"
                tools:ignore="RtlHardcoded,RtlSymmetry,HardcodedText,LabelFor" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/black"
                android:textSize="8pt"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="members"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="8pt"
                android:gravity="right"
                android:paddingRight="20dp"
                android:layout_gravity="center"
                android:text="Invite"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/steerCommitte"
            android:visibility="gone"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/box_background_white"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Steering Committe"
                android:textColor="@color/black"
                android:textSize="9pt"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:gravity="center"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imgSC"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    app:srcCompat="@drawable/icon_user"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="8pt"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:layout_gravity="center"
                    android:text="0"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textColor="@color/black"
                    android:textSize="8pt"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:text="members"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="8pt"
                    android:gravity="right"
                    android:paddingRight="20dp"
                    android:layout_gravity="center"
                    android:text="Invite"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/divSection"
            android:visibility="gone"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/box_background_white"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView37"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Division Sector"
                android:textColor="@color/black"
                android:textSize="9pt"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:gravity="center"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imgMin"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_weight="5"
                    android:layout_margin="5dp"
                    app:srcCompat="@drawable/icon_minus"
                    android:onClick="countDE"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/textValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="8pt"
                    android:gravity="right"
                    android:paddingRight="5dp"
                    android:layout_gravity="center"
                    android:text="0"
                    tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

                <TextView
                    android:id="@+id/textasdasdView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="8pt"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:text=" sector"
                    tools:ignore="HardcodedText,RtlHardcoded" />
                <ImageView
                    android:id="@+id/imgPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_weight="5"
                    android:layout_margin="5dp"
                    android:onClick="countIN"
                    app:srcCompat="@drawable/icon_plus"
                    tools:ignore="ContentDescription" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/box_background_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/box_background_white"
                android:orientation="horizontal"
                tools:ignore="InefficientWeight,NestedWeights">

                <ImageView
                android:id="@+id/imgCal"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:layout_gravity="left"
                app:srcCompat="@drawable/icon_calendar"
                tools:ignore="ContentDescription,RtlHardcoded" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Important Date"
                    android:textColor="@color/black"
                    android:textSize="8pt"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:layout_gravity="left"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    Add new"
                    android:textColor="@color/black"
                    android:textSize="7pt"
                    android:layout_weight="2"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="right"
                    android:gravity="right"
                    tools:ignore="HardcodedText,RtlHardcoded" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textSize="8pt"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:text="Add important dates such as pre-event, main event, and many more. Meetings can be added later"
                    tools:ignore="HardcodedText,InefficientWeight" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/box_background_white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/icon_user"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="left"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="7pt"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingRight="20dp"
                android:text="comittee members"
                android:textColor="@color/black"
                android:textSize="7pt"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingRight="20dp"
                android:gravity="right"
                android:text="invite"
                android:textColor="@color/black"
                android:textSize="7pt"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/box_background_white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgChain"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/icon_chain"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txtId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Code####"
                android:textColor="@color/black"
                android:textSize="6pt"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <Button
                android:id="@+id/copyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:gravity="center"
                android:text="Copy invitation code"
                android:textColor="@color/black"
                android:textSize="6pt"
                android:background="@color/white"
                tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />
        </LinearLayout>

        <Button
            android:id="@+id/btnCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_background"
            android:elevation="10dp"
            android:text="Create"
            android:textColor="@color/white"
            android:onClick="sendingData"
            android:textStyle="bold"
            tools:ignore="HardcodedText,UnusedAttribute" />

    </LinearLayout>


</ScrollView>